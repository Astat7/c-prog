#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int const ENEMY_HP_MAX = 40;
int const ENEMY_ATK_MIN = 4;
int const ENEMY_ATK_MAX = 6;

int const HP_MAX = 35;
int const ATK_MIN = 3;
int const ATK_MAX = 7;
int const HEAL_MIN = 6;
int const HEAL_MAX = 7;
int const MANA_START = 10;
int const HEAL_COST = 4;
int const RECHARGE_MIN = 6;
int const RECHARGE_MAX = 8;

void enemyAttack(int plrHealth)
{
    plrHealth -= (rand()%(ENEMY_ATK_MAX - ENEMY_ATK_MIN + 1)) + ENEMY_ATK_MIN;
}

void plrAttack(int health)
{
    health -= (rand()%(ATK_MAX - ATK_MIN + 1)) + ATK_MIN;
}

void heal(int plrHealth, int mana)
{
    if(mana >= HEAL_COST){
        plrHealth += (rand()%(HEAL_MAX - HEAL_MIN + 1)) + HEAL_MIN;
        mana -= HEAL_COST;
    }
}

void recharge(int mana)
{
    mana += (rand()%(RECHARGE_MAX - RECHARGE_MIN + 1)) + RECHARGE_MIN;
}

int main() {
    srand(time(NULL));
    
    //Enemy stats
    int enemyHealth = ENEMY_HP_MAX;
    
    
    //Player stats
    int health = HP_MAX;
    int mana = MANA_START;
    
    //Game
    printf(
        "Welcome to this game test \nInstructions: \nEach round you will be able to select between 3 moves using number keys as input \n1 for attack \n2 for heal \n3 for recharge \nInput 1 to continue:"
        );
    
    return 0;
}
